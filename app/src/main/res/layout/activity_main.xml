<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.tronography.rxmemory.ui.MainActivityViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.tronography.rxmemory.ui.MainActivity">

        <TextView
            android:id="@+id/attempt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attempt : "
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp"/>

        <TextView
            android:id="@+id/attempt_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@id/attempt_tv"
            app:layout_constraintTop_toTopOf="@+id/attempt_tv"
            tools:layout_editor_absoluteX="66dp"/>

        <include
            android:id="@+id/game"
            app:layout_constraintTop_toBottomOf="@id/attempt_count_tv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            layout="@layout/card_board"
            android:layout_width="0dp"
            android:layout_height="0dp">
        </include>

    </android.support.constraint.ConstraintLayout>
</layout>
