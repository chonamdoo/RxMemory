<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.tronography.rxmemory.ui.MainActivityViewModel"/>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        tools:context="com.tronography.rxmemory.ui.MainActivity">

        <include
            android:id="@+id/card_one"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_one"
            app:layout_constraintEnd_toStartOf="@id/card_two"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_two"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_one"
            app:layout_constraintEnd_toStartOf="@id/card_three"
            app:layout_constraintStart_toEndOf="@id/card_one"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_three"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_one"
            app:layout_constraintEnd_toStartOf="@id/card_four"
            app:layout_constraintStart_toEndOf="@id/card_two"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_four"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_three"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1">
        </include>

        <android.support.constraint.Guideline
            android:id="@+id/guideline_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/card_five"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent=".25"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_one"/>

        <include
            android:id="@+id/card_five"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_two"
            app:layout_constraintEnd_toStartOf="@id/card_six"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_one"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_six"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_two"
            app:layout_constraintEnd_toStartOf="@id/card_seven"
            app:layout_constraintStart_toEndOf="@id/card_five"
            app:layout_constraintTop_toBottomOf="@id/guideline_one"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_seven"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_two"
            app:layout_constraintEnd_toStartOf="@id/card_eight"
            app:layout_constraintStart_toEndOf="@id/card_six"
            app:layout_constraintTop_toBottomOf="@id/guideline_one"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_eight"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_seven"
            app:layout_constraintTop_toBottomOf="@id/guideline_one"
            app:layout_constraintVertical_weight="1">
        </include>

        <android.support.constraint.Guideline
            android:id="@+id/guideline_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/card_thirteen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent=".50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_nine"/>

        <include
            android:id="@+id/card_nine"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_three"
            app:layout_constraintEnd_toStartOf="@id/card_ten"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline_two"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_ten"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_three"
            app:layout_constraintEnd_toStartOf="@id/card_eleven"
            app:layout_constraintStart_toEndOf="@id/card_nine"
            app:layout_constraintTop_toBottomOf="@id/guideline_two"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_eleven"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_three"
            app:layout_constraintEnd_toStartOf="@id/card_twelve"
            app:layout_constraintStart_toEndOf="@id/card_ten"
            app:layout_constraintTop_toBottomOf="@id/guideline_two"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_twelve"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/guideline_two"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@id/guideline_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_eleven"
            app:layout_constraintVertical_weight="1">
        </include>

        <android.support.constraint.Guideline
            android:id="@+id/guideline_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/card_twelve"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_percent=".75"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_nine"
            />

        <include
            android:id="@+id/card_thirteen"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_fourteen"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/guideline_three"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_fourteen"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_fifteen"
            app:layout_constraintStart_toEndOf="@id/card_thirteen"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/guideline_three"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_fifteen"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/card_sixteen"
            app:layout_constraintStart_toEndOf="@id/card_fourteen"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/guideline_three"
            app:layout_constraintVertical_weight="1">
        </include>

        <include
            android:id="@+id/card_sixteen"
            layout="@layout/card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@id/guideline_three"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_fifteen"
            app:layout_constraintVertical_weight="1">
        </include>

    </android.support.constraint.ConstraintLayout>
</layout>
